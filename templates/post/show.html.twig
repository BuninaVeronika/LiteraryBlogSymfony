{% extends 'app/base.html.twig' %}
{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <h1>Пост</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Заголовок</th>
                <td>{{ post.header }}</td>
            </tr>
            <tr>
                <th>Краткое описание</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Поное описание</th>
                <td>{{ post.text }}</td>
            </tr>
            <tr>
                <th>Изображение</th>
                <td>{{ post.img }}</td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Дата обновления</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">Вернуться к списку</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">Редактировать</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
