{% extends 'app/base.html.twig' %}
{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <h1>Посты</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Заголовок</th>
                <th>Краткое описание</th>
                <th>Содержание поста</th>
                <th>Изображение</th>
                <th>Дата создание</th>
                <th>Дата обновления</th>
                <th>Активности</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.header }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.text }}</td>
                <td>{{ post.img }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">Показать</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Нет постов</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}">Cоздать новый</a>
{% endblock %}
